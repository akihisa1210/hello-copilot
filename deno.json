{
  "tasks": {
    "start": "deno run --allow-read index.ts",
    "dev": "deno run --watch --allow-read index.ts"
  },
  "importMap": "./import_map.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "target": "esnext",
    "lib": ["deno.window"],
    "jsx": "react",
    "experimentalDecorators": true
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true
    }
  }
}
